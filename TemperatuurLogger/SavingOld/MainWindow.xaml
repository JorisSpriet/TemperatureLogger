<Window x:Class="TemperatuurLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="361" Width="680" MinHeight="640" MinWidth="800">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="7*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" HorizontalAlignment="Left" Source="logo.jpg"/>
        <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" FontFamily="Calibri" FontWeight="ExtraBold" Foreground="DarkOliveGreen" Margin="105,5,5,5">Apotheek Sigrid Saelens - Temperaturen Frigo</Label>
        <TabControl Grid.Row="1" Name="tabControl">
            <TabControl.Items>
                <TabItem Header="Data bekijken"></TabItem>
                <TabItem Header="Data exporteren"></TabItem>
                <!--<TabItem Header="Logger uitlezen"></TabItem>-->
            </TabControl.Items>
        </TabControl>
    
    </Grid>
</Window>
