<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TemperatuurLogger.UI.Views.ReportSteps.Step2ReportCreation"  >
	 <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="1*,1*">
		
		<TextBlock HorizontalAlignment="Center">Folder</TextBlock>
		<TextBox Grid.Column="1" Text="{Binding Directory}" ></TextBox>
		
		<TextBlock Grid.Row="1" HorizontalAlignment="Center">Bestand</TextBlock>	
		<TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FileName}"></TextBox>
		
	</Grid>
</UserControl>
