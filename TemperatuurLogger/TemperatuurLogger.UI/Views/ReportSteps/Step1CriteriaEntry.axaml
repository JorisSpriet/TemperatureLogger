<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TemperatuurLogger.UI.Views.ReportSteps.Step1CriteriaEntry">
  <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="1*,1*">
    <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
				  PlaceholderText="Kies een logger..."
				  Items="{Binding Loggers}" SelectedItem="{Binding SelectedLogger}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		
		<Calendar Grid.Row="2" Grid.Column="1" SelectedDate="{Binding FromDate}" Margin="0 0 5 0" DisplayMode="Month" />
		<Calendar Grid.Row="2" Grid.Column="2" IsTodayHighlighted="True" SelectedDate="{Binding EndDate}"  Margin="5 0 0 0" DisplayMode="Month"/>
</Grid>
</UserControl>
