<UserControl x:Class="UitlezenLogger.WizardPages.StartPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UitlezenLogger.WizardPages"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:properties="clr-namespace:UitlezenLogger.Properties"
             xmlns:uitlezenLogger="clr-namespace:UitlezenLogger"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <uitlezenLogger:ResourceProvider x:Key="Resources" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Source={StaticResource Resources}, Path=Resources.StartPageText}" FontSize="20" TextWrapping="WrapWithOverflow" />  
    </Grid>
</UserControl>
